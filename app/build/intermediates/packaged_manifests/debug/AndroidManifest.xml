<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.net.pvr1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.net.pvr1.NoteApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/NoActionBar" >
        <activity
            android:name="com.net.pvr1.ui.selectCity.SelectCityActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.privateScreenings.PrivateScreeningsActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.giftCard.GiftCardActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.offer.OfferActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.webView.WebViewActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.myBookings.MyBookingsActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.otpVerify.OtpVerifyActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.resister.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.onBoarding.LandingActivity"
            android:exported="false" />
        <activity
            android:name="com.net.pvr1.ui.splash.SplashActivity"
            android:exported="false" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->

        </activity>
        <activity
            android:name="com.net.pvr1.ui.home.HomeActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.net.pvr1.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>