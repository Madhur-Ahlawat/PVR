<resources>
    <!-- Base application theme. -->
    <style name="Theme.PVR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/yellow</item>

        <!-- Customize your theme here. -->
        <item name="android:editTextStyle">@style/myEditText</item>

    </style>

    <style name="myEditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textCursorDrawable">@color/gray</item>
    </style>

    <style name="Theme.PVR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimaryDark">@color/login_color</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/login_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    //Dialog Theme
    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="colorPrimaryDark">@color/login_color</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/login_color</item>
    </style>

    <style name="AppTheme.Dialog1" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="colorPrimaryDark">#4D000000</item>
        <item name="colorAccent">#4D000000</item>
        <item name="colorPrimary">#4D000000</item>
    </style>

    <style name="full_screen_dialog" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">#4D000000</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="text_black_gift">
        <item name="android:textSize">@dimen/dim_h19</item>
        <item name="android:textColor">@color/pvr_dark_black</item>
        <item name="typeface">helvetica_neu_medium.ttf</item>
    </style>

    <style name="SearchText_price">
        <item name="android:textSize">@dimen/dim_h16</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="typeface">helvetica_neu.ttf</item>
    </style>

    <style name="NewTxtStyle">
        <item name="typeface">cafeta.otf</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/h5color</item>

    </style>

    //Font Style

    <style name="H1Size">
        <item name="typeface">helvetica_neu.otf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="H1RegSize">
        <item name="typeface">helvetica_neu_reg.ttf</item>
        <item name="android:textSize">@dimen/dim_h11</item>
        <item name="android:textColor">@color/h1color</item>

    </style>

    <style name="H12Size">
        <item name="typeface">helvetica_neu_medium.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="H2SizeDark">
        <item name="typeface">helvetica_neu.otf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pvr_dark_black</item>

    </style>

    <style name="H3Size">
        <item name="typeface">helvetica_neu_reg.otf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/otherCityColor</item>

    </style>

    <style name="H3SizeBold">
        <item name="typeface">helvetica_neu_reg.otf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/h1color</item>

    </style>

    <style name="H4SizeBold">
        <item name="typeface">montserrat_bold.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/h1color</item>
    </style>

    <style name="montBold14">
        <item name="typeface">montserrat_bold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="montReg14">
        <item name="typeface">montserrat_regular.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#959595</item>
    </style>

    <style name="H4SizeRegular">
        <item name="typeface">helvetica_neu_reg.ttf</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/h1color</item>

    </style>

    <style name="H5tSize">
        <item name="typeface">cafeta.otf</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/h5color</item>
    </style>

    <style name="styleSpinner">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#828282</item>
        <item name="colorControlActivated">#828282</item>
        <item name="android:textColorPrimary">#828282</item>
        <item name="android:textSize">@dimen/register</item>
        <item name="typeface">helvetica_neu.ttf</item>
        <item name="android:textColorHint">#828282</item>
        <item name="colorAccent">#828282</item>
    </style>


    //Bottom Dialog

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    //text ColorCursor

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlActivated">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    //Horizontal progress bar
    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">200dp</item>
        <item name="android:maxHeight">200dp</item>

    </style>



    <style name="styledBlackTilEditText">
        <item name="android:theme">@style/StyledblackTilEditTextTheme</item>
    </style>

    <style name="StyledblackTilEditTextTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#636363</item>
        <item name="background">@null</item>
        <item name="colorControlActivated">#636363</item>
        <item name="android:textColorPrimary">#636363</item>
        <item name="android:textSize">@dimen/register</item>
        <item name="android:textColorHint">#636363</item>
        <item name="colorAccent">#636363</item>
    </style>

    // custom alert dialog
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_alert_seattc</item>
    </style>


    <style name="NoBackgroundDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>
    //progressBar
    <style name="CustomProgressBarHorizontalNew"
        parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    //progressBar

    <style name="textInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">#00000000</item>
        <item name="colorPrimaryDark">@color/login_color</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/login_color</item>
        <item name="android:textCursorDrawable">@color/gray</item>
        <item name="android:textSelectHandle">@color/gray</item> // For pointer normal state and copy text state
        <item name="android:textSelectHandleLeft">@color/gray</item>
        <item name="android:textSelectHandleRight">@color/gray</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/login_color</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/login_color</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="text_black_bold">
        <item name="android:textSize">@dimen/dim_h19</item>
        <item name="android:textColor">@color/pvr_dark_black</item>
        <item name="fontFamily">@font/helvetica_neu_bold</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="text_black">
        <item name="android:textSize">@dimen/dim_h7</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="typeface">helvetica_neu.ttf</item>
    </style>

    <style name="text_gray_gift">
        <item name="android:textSize">@dimen/dim_h19</item>
        <item name="android:textColor">@color/gray_</item>
        <item name="fontFamily">@font/helvetica_neu</item>
    </style>

    //spinner
    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="font">@font/sf_pro_text_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#e6e6e6</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="android:textColorPrimary">#e6e6e6</item>
        <item name="android:textSize">@dimen/register</item>
        <item name="typeface">helvetica_neu.ttf</item>
        <item name="android:textColorHint">#828282</item>
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>

    </style>


    <style name="dateDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="StyledPrivate">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#828282</item>
        <item name="colorControlActivated">#828282</item>
        <item name="android:textColorPrimary">#828282</item>
        <item name="android:textSize">@dimen/register</item>
        <item name="typeface">helvetica_neu.ttf</item>
        <item name="android:textColorHint">#828282</item>
        <item name="colorAccent">#828282</item>
    </style>


    <style name="H2HNStyle">
        <item name="typeface">helvetica_neu.ttf</item>
        <item name="android:textSize">@dimen/dim_h2</item>
        <item name="android:textColor">@color/h2color</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/yellow</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>