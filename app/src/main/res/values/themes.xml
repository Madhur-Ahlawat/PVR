<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PVR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#64B5F6</item>
        <item name="colorPrimaryVariant">#2196F3</item>
        <item name="colorOnPrimary">@color/white</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">#64B5F6</item>
        <item name="colorSecondaryVariant">#2196F3</item>
        <item name="colorOnSecondary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    //Dialog Theme
    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
    </style>

    <style name="text_black_gift">
        <item name="android:textSize">@dimen/dim_h19</item>
        <item name="android:textColor">@color/pvr_dark_black</item>
        <item name="typeface">helvetica_neu_medium.ttf</item>
    </style>

    <style name="SearchText_price">
        <item name="android:textSize">@dimen/dim_h16</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="typeface">helvetica_neu.ttf</item>
    </style>

    <style name="NewTxtStyle">
        <item name="typeface">cafeta.otf</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/h5color</item>

    </style>

//Font Style
    <style name="H1Size">
        <item name="typeface">helvetica_neu.otf</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="H1RegSize">
        <item name="typeface">helvetica_neu_reg.ttf</item>
        <item name="android:textSize">@dimen/dim_h11</item>
        <item name="android:textColor">@color/h1color</item>

    </style>
    <style name="H12Size">
        <item name="typeface">helvetica_neu_medium.ttf</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="H2SizeDark">
        <item name="typeface">helvetica_neu.otf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pvr_dark_black</item>

    </style>

    <style name="H3Size">
        <item name="typeface">helvetica_neu_reg.otf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/h1color</item>

    </style>

    <style name="H3SizeBold">
        <item name="typeface">helvetica_neu_reg.otf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/h1color</item>

    </style>

    <style name="H4SizeBold">
        <item name="typeface">helvetica_neu_bold.otf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/h1color</item>
    </style>

    <style name="H4SizeRegular">
        <item name="typeface">helvetica_neu_reg.ttf</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
        <item name="android:textColor">@color/h1color</item>

    </style>
    <style name="H5tSize">
        <item name="typeface">cafeta.otf</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/h5color</item>
    </style>
    <style name="styleSpinner">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#828282</item>
        <item name="colorControlActivated">#828282</item>
        <item name="android:textColorPrimary">#828282</item>
        <item name="android:textSize">@dimen/register</item>
        <item name="typeface">helvetica_neu.ttf</item>
        <item name="android:textColorHint">#828282</item>
        <item name="colorAccent">#828282</item>
    </style>



    //Bottom Dialog
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>