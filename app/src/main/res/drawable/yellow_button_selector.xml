<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_pressed="true">
        <shape tools:ignore="ExtraText">
            <gradient android:endColor="@color/pvr_yellow_hover_button" android:startColor="@color/pvr_yellow_hover_button" />
            />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:endColor="@color/pvr_copper" android:startColor="@color/pvr_copper" />
            <stroke android:width="1dp" android:color="@color/pvr_copper" />

        </shape>
    </item>
    <item>
        <shape>

            <gradient android:endColor="@color/pvr_yellow" android:startColor="@color/pvr_yellow" />
            <stroke android:width="1dp" android:color="@color/pvr_yellow" />

        </shape>
    </item>

</selector>