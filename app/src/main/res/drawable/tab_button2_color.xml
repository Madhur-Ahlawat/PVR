<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">

        <shape android:shape="rectangle">
            <solid android:color="@color/pvr_yellow" />
            <corners android:radius="@dimen/dimen_8dp" />

        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">

            <solid android:color="#E5E5E5" />
            <stroke android:width="1dp" android:color="#E5E5E5" />
            <corners android:bottomLeftRadius="@dimen/dimen_8dp" android:bottomRightRadius="@dimen/dimen_0dp" android:topLeftRadius="@dimen/dimen_8dp" android:topRightRadius="@dimen/dimen_0dp" />
        </shape>
    </item>
</selector>





