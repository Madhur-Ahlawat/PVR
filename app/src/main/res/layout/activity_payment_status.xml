        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/circular_progress"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:direction="counterclockwise"
            app:dotColor="@color/green_color"
            app:dotWidth="3dp"
            app:drawDot="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView399"
            app:layout_constraintEnd_toEndOf="parent"
            app:enableProgressAnimation="true"
            app:progressBackgroundColor="@color/background_color"
            app:progressBackgroundStrokeWidth="8dp"
            app:progressCap="round"
            app:progressColor="@color/green_color"
            app:progressStrokeWidth="16dp"
            app:startAngle="270"
            app:textColor="@color/green_color"
            app:textSize="14sp"
            app:fillBackground="false"
            app:gradientType="linear"
            app:gradientEndColor="@color/green_color" />

        <TextView
            android:id="@+id/textView399"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="Do not hit back button or close the app until the payment is complete"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



