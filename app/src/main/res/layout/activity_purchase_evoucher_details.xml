                                android:includeFontPadding="false"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_13sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView106"
                                tools:text="Lorem Ipsum Dummy Text Lorem" />

                            <TextView
                                android:id="@+id/textView420"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/sf_pro_text_regular"
                                android:includeFontPadding="false"
                                android:textColor="@color/otherCityColor"
                                android:textSize="@dimen/dimen_12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/textView34"
                                app:layout_constraintTop_toBottomOf="@+id/textView34"
                                tools:text="Valid till 20 Aug 2022" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/view25"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/voucher_det_select"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/textView420">


                                <TextView
                                    android:id="@+id/textView424"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_text_medium"
                                    android:text="@string/available_visits"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/textView425"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/sf_pro_text_bold"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/dimen_14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:text="4 Visits" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <!--Trans Id -->
