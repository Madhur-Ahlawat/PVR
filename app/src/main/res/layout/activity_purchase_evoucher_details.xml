                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout175">


                        <View
                            android:id="@+id/view57"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#EDE8E9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView180"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/question_alert"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/textView415"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/sf_pro_text_semi_bold"
                                android:text="@string/how_it_works"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14sp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView180"
                                app:layout_constraintStart_toEndOf="@+id/imageView180"
                                app:layout_constraintTop_toTopOf="@+id/imageView180" />

                            <ImageView
                                android:id="@+id/imageView181"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView415"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView415"
                                app:srcCompat="@drawable/arrow_down"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/textView416"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/sf_pro_text_regular"
                                android:text="@string/know_how_to_avail_this_voucher"
                                android:textColor="@color/gray_payment"
                                android:textSize="@dimen/dimen_12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/textView415"
                                app:layout_constraintTop_toBottomOf="@+id/imageView181" />

                            <ImageView
                                android:id="@+id/imageView182"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:src="@drawable/howwork"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView181"
                                tools:ignore="ContentDescription" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Trans History-->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout186"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout176">


                        <View
                            android:id="@+id/view245"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="#EDE8E9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/imageView183"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/trans_rollback"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/textView433"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/sf_pro_text_semi_bold"
                                android:text="@string/transaction_history"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dimen_14sp"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView183"
                                app:layout_constraintStart_toEndOf="@+id/imageView183"
                                app:layout_constraintTop_toTopOf="@+id/imageView183" />

                            <ImageView
                                android:id="@+id/imageView184"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_5dp"
                                app:layout_constraintBottom_toBottomOf="@+id/textView433"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/textView433"
                                app:srcCompat="@drawable/arrow_down"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/textView444"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/sf_pro_text_regular"
                                android:text="@string/know_how_to_avail_this_voucher"
                                android:textColor="@color/gray_payment"
                                android:textSize="@dimen/dimen_12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/textView433"
                                app:layout_constraintTop_toBottomOf="@+id/imageView184" />



                            <androidx.recyclerview.widget.RecyclerView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/textView433"
                                app:layout_constraintTop_toBottomOf="@+id/imageView184"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

