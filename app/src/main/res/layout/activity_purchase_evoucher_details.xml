                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/voucher_det_pay_curve"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView24">

                        <TextView
                            android:id="@+id/textView426"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:includeFontPadding="false"
                            android:text="@string/voucher_code"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/dimen_14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView427"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:includeFontPadding="false"
                            android:text="@string/scheme_id"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/dimen_14sp"
                            app:layout_constraintStart_toStartOf="@+id/textView426"
                            app:layout_constraintTop_toBottomOf="@+id/textView426" />

                        <TextView
                            android:id="@+id/textView428"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:includeFontPadding="false"
                            android:text="@string/purchased_on"
                            android:textColor="@color/textColor"
                            android:textSize="@dimen/dimen_14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView427" />

                        <TextView
                            android:id="@+id/textView429"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView426"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView426"
                            tools:text="TextView" />

                        <TextView
                            android:id="@+id/textView430"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView427"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView427"
                            tools:text="TextView" />


                        <TextView
                            android:id="@+id/textView432"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
