<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/tvCross"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:src="@drawable/cross_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />


    <TextView
        android:fontFamily="@font/sfprodisplay_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tvCross"
        android:textAllCaps="true"
        android:text="@string/pvr_privilege_vouchers"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <com.net.pvr1.utils.view.CustomViewPager
        android:id="@+id/overlap_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_below="@+id/tvCross"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        />


</RelativeLayout>