<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.bankoffers.BankOffersActivity">

    <View
        android:id="@+id/view227"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/include29"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout46"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="#FFFDF5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include29">

        <View
            android:id="@+id/view114"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView177"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/sf_pro_text_semi_bold"
            android:text="@string/to_be_paid"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view114"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView178"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:fontFamily="@font/sf_pro_text_semi_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/view114"
            app:layout_constraintTop_toTopOf="@+id/view114"
            tools:text="â‚¹8888" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="@dimen/dimen_25dp"
        app:layout_constraintBottom_toBottomOf="@+id/view227"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout46">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/credLogo"
                android:layout_margin="@dimen/dimen_20dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="test" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/user_login_padding_default1"
                android:paddingRight="@dimen/user_login_padding_default1">

                <EditText
                    android:id="@+id/vpaNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:hint="Enter your VPA"
                    android:inputType="text"
                    android:visibility="gone"
                    android:padding="@dimen/user_login_padding_default1"
                    android:fontFamily="@font/sf_pro_text_medium"
                    android:singleLine="true"
                    android:autofillHints="" />

                <TextView
                    android:id="@+id/vpaValidationMessage"
                    android:layout_marginTop="@dimen/spacing_between_msg_and_editext_top"
                    android:layout_marginBottom="@dimen/spacing_between_msg_and_editext_bottom"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/textview_padding_bottom"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="We promise to keep your VPA number safe"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:layout_margin="@dimen/dimen_30dp"
                    android:textSize="@dimen/dimen_14sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/bannerText"
                    android:layout_marginTop="@dimen/spacing_between_msg_and_editext_top"
                    android:layout_marginBottom="@dimen/spacing_between_msg_and_editext_bottom"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/textview_padding_bottom"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_16sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="We promise to keep your VPA number safe"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:textColor="@color/black"
                    />



                <TextView
                    android:id="@+id/dataTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@color/pvr_dark_black"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/sfprodisplay_bold"
                    android:text=""/>
                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/circleView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    CircleProgressView:cpv_autoTextSize="false"
                    CircleProgressView:cpv_barColor="@color/pvr_green"
                    CircleProgressView:cpv_barWidth="20dp"
                    CircleProgressView:cpv_innerContourSize="0dp"
                    CircleProgressView:cpv_maxValue="100"
                    CircleProgressView:cpv_outerContourSize="0dp"
                    CircleProgressView:cpv_rimColor="@color/colorAccent"
                    CircleProgressView:cpv_rimWidth="20dp"
                    CircleProgressView:cpv_seekMode="true"
                    CircleProgressView:cpv_showUnit="false"
                    CircleProgressView:cpv_spinColor="@color/pvr_green"
                    CircleProgressView:cpv_textColor="@color/dark_slate_gray"
                    CircleProgressView:cpv_textScale="1"
                    CircleProgressView:cpv_unit="%"
                    CircleProgressView:cpv_unitColor="@color/pvr_green"
                    CircleProgressView:cpv_unitScale="1"
                    CircleProgressView:cpv_value="5" />


            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/include30"
            layout="@layout/button_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>