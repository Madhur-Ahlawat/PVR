<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="String" />
    </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_interval_timing"
            android:layout_width="300dp"
            android:layout_height="@dimen/dimen_46dp"
            android:autoLink="all"
            android:background="@drawable/yellow_curve"
            android:fontFamily="@font/sf_pro_text_bold"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:layout_width="0dp"
                android:background="@drawable/yellow_curve"
                app:cardCornerRadius="@dimen/dimen_5dp"
                android:backgroundTint="#99000000"
                android:layout_height="0dp"
                android:alpha="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textview_interval_starts_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/sf_pro_text_regular"
                    android:text="Interval Starts at "
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_interval_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="@font/sf_pro_text_semi_bold"
                    android:text="3:20 PM"
                    android:textColor="@color/h7.1color"
                    android:textSize="@dimen/dimen_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textview_interval_starts_at"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>