<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/top_curve_bottomsheet">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_gravity="center"
        android:id="@+id/logot"
        android:visibility="visible"
        android:src="@drawable/ic_chl"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/benifit"
            android:fontFamily="@font/sf_pro_text_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:visibility="visible"
            android:text="Child-Friendly Seats Available"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/message"
           android:fontFamily="@font/sf_pro_text_regular"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:gravity="left"
            android:lineSpacingExtra="3sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Our cinemas have seat cushions for your little ones to be able to view the screen without obstruction. Please ask any of the PVR staff or the cinema manager for one.\n\nAvailable free of cost on first-come, first-served basis."
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_24dp"
        android:layout_marginEnd="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_40dp"
        android:background="@drawable/yellow_book_curve"
        android:layout_marginTop="24dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/close"
            android:fontFamily="@font/sf_pro_text_bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Close"
            />

    </LinearLayout>

</LinearLayout>