<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/white"
    android:elevation="5dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:src="@drawable/back"
        android:paddingTop="@dimen/dimen_3dp"
        android:paddingBottom="@dimen/dimen_3dp"
        android:paddingStart="@dimen/dimen_1dp"
        android:paddingEnd="@dimen/dimen_20dp"
        app:tint="@color/black"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/titleCommonToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="14dp"
        android:layout_toStartOf="@+id/subTitle"
        android:layout_toEndOf="@+id/btnBack"
        android:ellipsize="marquee"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_20sp" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/H4SizeBold"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:paddingStart="@dimen/common_header_subtitle_margin"
        android:paddingEnd="@dimen/navigation_padding_default"
        android:singleLine="true"
        android:visibility="invisible"
        tools:text="OFFER" />

    <ImageButton
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_shadow"
        android:visibility="gone"
        tools:ignore="ContentDescription" />


</RelativeLayout>
