<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_custom_gift_card"
    android:layout_marginTop="@dimen/padding_10"
    android:layout_marginBottom="@dimen/dimen_5dp"
    android:background="@color/white"
    android:padding="@dimen/padding_10"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_add_gift_image"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp"
            android:scaleType="fitXY"
            android:src="@drawable/gift_card_placeholder"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_50dp"
            android:visibility="gone"
            android:src="@color/black_75"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_gift_value"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginStart="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/padding_10"
            android:background="@drawable/bg_genre_yellow"
            android:backgroundTint="@color/grayEd"
            android:elevation="@dimen/dimen_4dp"
            android:paddingStart="@dimen/dimen_20dp"
            android:paddingTop="@dimen/padding_10"
            android:paddingEnd="@dimen/dimen_20dp"
            android:paddingBottom="@dimen/padding_10"
            tools:text="Rs 300"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="x 1"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_10"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/gray"
        android:text="  Custom Card "
        android:textSize="@dimen/dimen_14sp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_10"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_grey_booking"
        tools:ignore="ContentDescription"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">
        <TextView
            android:id="@+id/tv_add_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:text="@string/remove"
            android:textColor="@color/red"
            android:textSize="@dimen/dimen_14sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>