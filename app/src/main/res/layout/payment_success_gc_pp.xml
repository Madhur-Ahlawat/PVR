<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bottom_corner">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="@dimen/dimen_5dp"
        android:id="@+id/logo"
        android:background="@color/gray_color"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        style="@style/text_black_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_25dp"
        android:textColor="@color/green_color"
        android:textSize="25sp"
        android:text="Success!"
        />

    <TextView
        style="@style/text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/refrenceNo"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:lineSpacingExtra="@dimen/dimen_5dp"
        android:text="Order ID :\n88888888888888888888"
        />

    <TextView
        android:id="@+id/price"
        style="@style/text_black_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="â‚¹1800"
        />

    <TextView
        style="@style/text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/paidDT"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:lineSpacingExtra="@dimen/dimen_5dp"
        android:text="Paid on: 4 Aug 2022, 6:30 PM"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/dimen_40dp"
        android:background="@color/gray_color"/>

    <TextView
        style="@style/text_black_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/titleText"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_30dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:lineSpacingExtra="@dimen/dimen_5dp"
        android:text="Thanks for purchasing the\nPVR Passport voucher!"
        />


    <TextView
        style="@style/text_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/dic"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_50dp"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_30dp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:lineSpacingExtra="@dimen/dimen_5dp"
        android:text="Redirecting you to your activated\nPassport page now!"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:id="@+id/btn"
        android:visibility="gone"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/textView368"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_14dp"
            android:paddingBottom="@dimen/dimen_14dp"
            android:text="View Card"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_16sp" />
    </androidx.cardview.widget.CardView>

</LinearLayout>