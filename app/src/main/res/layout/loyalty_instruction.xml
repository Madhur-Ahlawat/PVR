<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@drawable/bottom_corner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        >
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_dialoge_line" />
        <ImageView
            android:id="@+id/crossImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cross_white"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_15dp"
            app:tint="@color/black" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:fontFamily="@font/sfprodisplay_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:text="Thank you\nfor your feedback"
            />

        <TextView
            android:id="@+id/tvSubmitFeedback"
            android:fontFamily="@font/helvetica_neu_bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_45dp"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_corner_8"
            android:backgroundTint="@color/pvr_yellow"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:text="@string/proceed"
            android:textSize="18sp"
            android:textColor="@color/pvr_dark_black"

            />


    </LinearLayout>

</LinearLayout>


