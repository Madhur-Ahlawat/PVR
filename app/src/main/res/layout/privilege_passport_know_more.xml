<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="25dp"
                android:padding="@dimen/dimen_12dp"
                android:background="@drawable/passport_corner_new"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true">
                        <TextView
                            android:id="@+id/priceNewText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="â‚¹500.00 / Month"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintTop_toBottomOf="@id/ivEarnPoint"
                            />

                        <TextView
                            android:fontFamily="@font/sf_pro_text_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/textBelow"
                            android:layout_marginStart="@dimen/padding_10"
                            android:text="Automatic renewal every month."
                            android:textColor="@color/pvr_yellow"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/ivEarnPoint"
                            />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/llFirstCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:weightSum="2">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_weight="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="105dp"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:outlineSpotShadowColor="@color/transparent1"
                            app:cardBackgroundColor="#99000000"
                            app:cardCornerRadius="@dimen/padding_10"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="@dimen/dimen_12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="26dp"
                                    android:src="@drawable/earn_privilege"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintLeft_toRightOf="@+id/ivEarnPoint"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <ImageView
                                    android:id="@+id/ivEarnPoint"
                                    android:layout_width="51dp"
                                    android:layout_height="44dp"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/earn_points"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true">
                                    <TextView
                                        android:id="@+id/visitText"
                                        android:fontFamily="@font/sfprodisplay_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="1x Visit a Day"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        app:layout_constraintTop_toBottomOf="@id/ivEarnPoint"
                                        />

                                    <TextView
                                        android:fontFamily="@font/sf_pro_text_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="Monday to Friday"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        app:layout_constraintTop_toBottomOf="@id/ivEarnPoint"
                                        />

                                </LinearLayout>


                                <ImageView
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/dimen_2dp"
                                    android:src="@drawable/privilege_date"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_weight="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="105dp"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:outlineSpotShadowColor="@color/transparent1"
                            app:cardBackgroundColor="#99000000"
                            app:cardCornerRadius="@dimen/padding_10"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="@dimen/dimen_12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="26dp"
                                    android:background="@drawable/oval"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:layout_width="51dp"
                                    android:layout_height="44dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/redeem_privilege"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true">
                                    <TextView
                                        android:fontFamily="@font/sfprodisplay_bold"
                                        android:id="@+id/top_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="Total 30 visits allowed"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:fontFamily="@font/sf_pro_text_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:layout_below="@+id/top_text"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="90 days validity"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />
                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    app:layout_constraintTop_toTopOf="parent">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_centerInParent="true">

                                        <TextView
                                            android:id="@+id/visitCount"
                                            android:fontFamily="@font/sfprodisplay_bold"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="30"
                                            android:textAllCaps="true"
                                            android:layout_marginBottom="-5dp"
                                            android:textColor="@color/white"
                                            android:textSize="20sp" />

                                        <TextView
                                            android:fontFamily="@font/sfprodisplay_bold"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="Visits"
                                            android:layout_marginTop="-5dp"
                                            android:textAllCaps="true"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/dimen_12sp" />
                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/privilege_visit"/>

                                </RelativeLayout>



                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:visibility="visible"
                android:weightSum="2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_weight="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="105dp"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:outlineSpotShadowColor="@color/transparent1"
                            app:cardBackgroundColor="#99000000"
                            app:cardCornerRadius="@dimen/padding_10"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="@dimen/padding_10"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="26dp"
                                    android:src="@drawable/earn_privilege"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <ImageView
                                    android:layout_width="51dp"
                                    android:layout_height="44dp"
                                    android:layout_marginTop="12dp"
                                    android:src="@drawable/earn_points"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true">
                                    <TextView
                                        android:fontFamily="@font/sfprodisplay_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="Online only Movie pass"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"

                                        />
                                    <TextView
                                        android:fontFamily="@font/sf_pro_text_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="Book using PVR mobile\napp or website"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"

                                        />


                                </LinearLayout>


                                <ImageView
                                    android:layout_width="@dimen/dimen_60dp"
                                    android:layout_height="@dimen/dimen_60dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dimen_30dp"
                                    android:layout_marginTop="@dimen/dimen_8dp"
                                    android:src="@drawable/privilege_book"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:visibility="gone"
                    android:layout_weight="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="105dp"
                            android:layout_margin="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:outlineSpotShadowColor="@color/transparent1"
                            app:cardBackgroundColor="#99000000"
                            app:cardCornerRadius="@dimen/padding_10"
                            app:cardUseCompatPadding="true"
                            app:contentPadding="@dimen/dimen_12dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="26dp"
                                    android:background="@drawable/oval"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintLeft_toRightOf="@+id/ivRedeem"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ImageView
                                    android:id="@+id/ivRedeem"
                                    android:layout_width="51dp"
                                    android:layout_height="44dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/redeem_privilege"
                                    android:visibility="gone"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:fontFamily="@font/sfprodisplay_bold"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="Online Only Movie Pass"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />
                                    <TextView
                                        android:fontFamily="@font/sf_pro_text_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:text="Book using PVR mobile\napp or website"
                                        android:textColor="@color/white"
                                        android:textSize="12sp" />

                                </LinearLayout>

                                <ImageView
                                    android:layout_width="@dimen/dimen_50dp"
                                    android:layout_height="@dimen/dimen_50dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/dimen_30dp"
                                    android:src="@drawable/privilege_subs"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


        </LinearLayout>




        <TextView
            android:id="@+id/tvWithPvr"
            android:fontFamily="@font/sfprodisplay_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llFirstCard"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Joining Benefits"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <View
            android:layout_width="60dp"
            android:layout_height="1dp"
            android:background="@color/pvr_yellow"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:visibility="gone"
            android:src="@drawable/privilege_star"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_text_medium"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Food &amp; Beverages Voucher Worth INR 200"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="(On spend of INR 800 get a discount of INR 200)"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:src="@drawable/privilege_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:layout_marginTop="@dimen/dimen_8dp"
