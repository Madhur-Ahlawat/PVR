<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent1"
    android:padding="6dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/offer_shadow"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent1"
        android:id="@+id/item">

        <ImageView
            android:id="@+id/offerImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="-1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle_default"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/textDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offerImg"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvOfferTitle"
                style="@style/H1Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text=""
                android:textColor="#828282"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOfferSubTitle"
                style="@style/H3SizeBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#2f2f2f"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/valid"
                style="@style/H1Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_offer_item"
                android:ellipsize="end"
                android:text=""
                android:textColor="#828282"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvOfferDetail"
                style="@style/H1Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_offer_item"
                android:ellipsize="end"
                android:text=""
                android:visibility="gone" />


            <TextView
                android:id="@+id/moreDetails"
                style="@style/H2SizeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/more_details"
                card_view:drawableRightCompat="@drawable/ic_yellow" />
        </LinearLayout>

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>