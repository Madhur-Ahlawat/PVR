<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- <ImageView
         android:id="@+id/ivImage"
         android:layout_width="24dp"
         android:layout_height="24dp"
         android:src="@drawable/ic_plus_icon" />-->


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/lltvNum"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:background="@drawable/ic_verified"
        android:gravity="center"
        android:layout_height="@dimen/dimen_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/pvr_dark_black"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            tools:text="12" />

    </LinearLayout>







    <ImageView
        android:id="@+id/ivHistroy"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:scaleType="matrix"
        android:src="@drawable/line"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lltvNum"
        app:layout_constraintRight_toRightOf="@id/lltvNum"
        app:layout_constraintTop_toBottomOf="@id/lltvNum" />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/lltvNum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvNum"
            android:layout_width="match_parent"
            android:textColor="@color/pvr_dark_black"
            style="@style/text_black_bold"
            android:textStyle="bold"
            android:lineSpacingExtra="4sp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            tools:text="1 Visit" />

        <TextView
            android:id="@+id/voc_points"
            android:layout_width="match_parent"
            android:textColor="@color/pvr_dark_black"
            style="@style/H2HNStyle"
            android:textStyle="bold"
            android:visibility="gone"
            android:lineSpacingExtra="4sp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            tools:text="45 points earned" />

        <TextView
            android:id="@+id/voc_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            style="@style/H2HNStyle"
            android:textSize="12sp"
            tools:text="â‚¹900 | Aug 20,2018" />





    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>