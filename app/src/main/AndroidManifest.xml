            android:name="com.net.pvr1.ui.search.searchHome.SearchHomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.enableLocation.EnableLocationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.player.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.privateScreenings.PrivateScreeningsActivity"
